{{ Form.open(form|merge({'class':'form--hor'}))|raw }}
{% if(token) %}
    {{ Form.token() }}
{% endif %}    
{% for hidden in hiddens %}
    {{ hidden|raw }}
{% endfor %}
<div class="col-group">    
    <div class="col-dt-16 col-mb-16">
        <fieldset name="inputs">
            <div class="col-group">
                {% if fieldsets[0].name|length>0 %}
                    <legend>{{ fieldsets[0].legend }}</legend>
                {% endif %}
                {% for control in fieldsets[0].controls() %}                                                
                    <div class="col-group">
                        <div class="form-block">
                            {% include 'antares/foundation::layouts.antares.partials.form.horizontal._'~control.type|replace({':': '_'}) with {control: control} %}                            
                        </div>
                    </div>
                {%endfor %}
            </div>
        </fieldset>
        {% for number,fieldset in fieldsets.except_by_key('name',['info','logo','colors','text-color-main','text-color-secondary','text-color-background']) %}
            <fieldset>
                {% if fieldset.name|length>0 %}
                    <legend>{{ fieldset.legend }}</legend>
                {% endif %}
                {% for control in fieldset.controls() %}                
                    <div class="col-group">
                        <div class="form-block">
                            {% include 'antares/foundation::layouts.antares.partials.form.horizontal._'~control.type|replace({':': '_'}) with {control: control} %}                            
                        </div>
                    </div>
                {%endfor %}
            </fieldset>
        {% endfor %}
    </div>    
    {% if buttons|length>0 %}        
        <div class="col-dt-16">
            <div class="app-content__footer">
                <div class="btn-group">
                    {% for button in buttons %}
                        {{ button.getField(row, button, [])|raw }}
                    {% endfor %}                    
                </div>
            </div>
        </div>
    {% endif %}
</div>
{{ Form.close()|raw }}
