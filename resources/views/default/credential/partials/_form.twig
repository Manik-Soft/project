{% set submit=fieldsets[0].controls[5] %}
{{ submit.getField(row, submit, [])|raw }}
<div class="link-group">
    {% set back=fieldsets[0].controls[6] %}
    {{ back.getField(row, back, [])|raw }}
</div>
{{ Form.close()|raw }}