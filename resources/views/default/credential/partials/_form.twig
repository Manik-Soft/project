<div class="login-box__header">
    <img src="/img/logos/logo.png" >
</div>
{{ Form.open(form|merge({'class':'form--hor'}))|raw }}
{% if(token) %} {{ Form.token() }} {% endif %}
{% for hidden in hiddens %} {{ hidden|raw }} {% endfor %}
{% set email=fieldsets[0].controls[0] %}

<div class="mdl-textfield mdl-textfield--billevo mdl-js-textfield {{ errors.has('email')?'is-invalid':'' }}">
    {{ Form.label(email.name, email.label,{'class':'label--login'})|raw }}        
    {{ email.getField(row, email, [])|raw }}            
    <span class="mdl-textfield__error">
        {{ errors.first('email', format)|raw }}
    </span>
</div>
